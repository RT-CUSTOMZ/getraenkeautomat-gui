<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<listener>
		<listener-class>
			de.rtcustomz.getraenkeautomat.util.DatabaseController
		</listener-class>
	</listener>

	<!-- Servlets -->
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>de.rtcustomz.getraenkeautomat.server.GreetingServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GetraenkeautomatRESTService</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>
				de.rtcustomz.getraenkeautomat.resources
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/GetraenkeautomatGUI/greet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GetraenkeautomatRESTService</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>GetraenkeautomatGUI.html</welcome-file>
	</welcome-file-list>

</web-app>
